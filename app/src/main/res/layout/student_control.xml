<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Admin.AdminControl"
    android:orientation="vertical"
    android:background="@drawable/back" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#BAFFEBEB"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="Student Control Panel"
        android:textColor="#92AF25"
        android:textSize="20sp" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="-40dp"/>
    <!--android:background="@drawable/menux"-->
    <ImageView
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo" />


    <TextView
        android:background="#11385E"
        android:text="Start Quize"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:layout_width="180dp"
        android:gravity="center"
        android:layout_height="30dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="110dp"
        android:background="#11385E"
        android:text="View Quiz results"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center"

        android:layout_width="180dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:width="150dp"
        android:height="30dp"
        android:textStyle="bold"
        android:background="#11385E"
        android:gravity="center"
        android:text="Student Name"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/admin_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:width="150dp"
        android:drawableEnd="@drawable/edit"
        android:background="#11385E"
        android:layout_marginStart="220dp"
        android:textColor="#fff"

        android:text=""

        android:layout_marginTop="-30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:width="150dp"
        android:textStyle="bold"
        android:background="#11385E"
        android:textColor="#fff"
        android:text="Phone Number"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/admin_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:width="150dp"
        android:background="#11385E"
        android:textColor="#fff"
        android:drawableEnd="@drawable/edit"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:width="150dp"
        android:height="30dp"
        android:textStyle="bold"
        android:background="#11385E"
        android:gravity="center"
        android:text="Email "
        android:textColor="#fff" />


    <TextView
        android:id="@+id/admin_email_tv"
        android:layout_width="wrap_content"
        android:drawableEnd="@drawable/edit"
        android:layout_height="30dp"
        android:width="150dp"
        android:background="#11385E"
        android:textColor="#fff"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-28dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:height="30dp"
        android:width="150dp"
        android:background="#11385E"
        android:textColor="#fff"
        android:text="Password"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/admin_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:height="30dp"
        android:width="150dp"
        android:drawableEnd="@drawable/edit"
        android:background="#11385E"
        android:textColor="#fff"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-28dp"/>
    <Button
        android:id="@+id/Student_control_Logout"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="#C2DEF6"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="#BF6143"
        android:text="LOGOUT"
        android:textStyle="bold"
        android:textSize="15sp"/>

</LinearLayout>