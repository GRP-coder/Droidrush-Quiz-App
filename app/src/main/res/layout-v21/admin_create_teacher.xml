<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="118dp"
        android:layout_height="111dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradient_bg3"
        android:fontFamily="@font/amaranth_bold_font"
        android:padding="1dp"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="29sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:drawableStart="@drawable/passlogo"
        android:drawablePadding="5dp"
        android:ems="10"

        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:drawableStart="@drawable/userlogo"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_emailid" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="#AE61A69E"
        android:fontFamily="@font/arbutus"
        android:text="create teacher"
        android:elevation="5dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regno" />

    <EditText
        android:id="@+id/et_emailid"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:drawableStart="@drawable/emaillogo"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Email-ID"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    

    <EditText
        android:id="@+id/etPascheck"
        android:layout_width="262dp"
        android:layout_height="45dp"

        android:layout_marginTop="12dp"
        android:background="#fff"
        android:drawableStart="@drawable/passlogo"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    

    <EditText
        android:id="@+id/regno"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:drawableStart="@drawable/reg_face"
        android:ems="10"
        android:hint="Registration Number"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPascheck" />

</androidx.constraintlayout.widget.ConstraintLayout>