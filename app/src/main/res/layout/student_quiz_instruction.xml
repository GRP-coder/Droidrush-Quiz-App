<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">


    <TextView

        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#388E3C"
        android:gravity="center"
        android:text="QUIZ INSTRUCTIONS"

        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView9"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="#FB8C00"
        android:gravity="center"
        android:text="FULL MARKS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/total_mark"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:background="#AA6BE1"
        android:gravity="center"

        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView


        android:id="@+id/textView10"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="#FB8C00"
        android:gravity="center"
        android:text="TOTAL QUESTIONS"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/total_qn"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="#AA6BE1"

        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/total_mark" />

    <TextView


        android:id="@+id/textView11"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="#FB8C00"
        android:gravity="center"
        android:text="TOTAL TIME"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="194dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"

        android:background="#AA6BE1"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/total_qn" />

    <TextView
        android:id="@+id/instruction_tv"

        android:layout_width="402dp"

        android:layout_height="407dp"
        android:background="#75669DD5"
        android:gravity="center"
        android:text="INSTRUCTIONS TO FOLLOW"
        android:textColor="#fff"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.306" />

    <Button
        android:id="@+id/button10"
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:background="#83F349"
        android:text="START QUIZ"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_tv"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>